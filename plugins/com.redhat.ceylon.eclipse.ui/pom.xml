<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.redhat.ceylon.eclipse</groupId>
        <artifactId>plugins</artifactId>
        <version>1.1.1-SNAPSHOT</version>
    </parent>
    <artifactId>com.redhat.ceylon.eclipse.ui</artifactId>

    <packaging>eclipse-plugin</packaging>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>cleanCeylonModule</id>
                        <phase>clean</phase>
                        <configuration>
                            <target>
                                <ant dir="${project.basedir}/ceylon"
                                    target="clean" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>compileCeylonModule</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <target>
                                <ant dir="${project.basedir}/ceylon"
                                    target="generate-eclipseDependenciesModule" />
                                <ant dir="${project.basedir}/ceylon"
                                    target="compile" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>testCeylonModule</id>
                        <phase>test</phase>
                        <configuration>
                            <target>
                                <ant dir="${project.basedir}/ceylon"
                                    target="test" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <configuration>
                    <overWriteIfNewer>true</overWriteIfNewer>
                    <overWriteReleases>true</overWriteReleases>
                    <overWriteSnapshots>true</overWriteSnapshots>
                    <includeArtifactIds>
                        org.eclipse.core.expressions,
                        org.eclipse.core.filesystem,
                        org.eclipse.core.resources,
                        org.eclipse.core.runtime,
                        org.eclipse.text,
                        org.eclipse.jdt.core</includeArtifactIds>
                    <outputDirectory>${project.basedir}/ceylon/target/repo/plugins</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>copy-sources-of-dependencies</id>
                        <phase>initialize</phase>
                        <configuration>
                            <classifier>sources</classifier>
                        </configuration>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
